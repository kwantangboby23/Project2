</head>

<body>
    <div class="wrapper">
        {{#if user}}
        <div id="sidebar" class="column">
            {{> sidebar/sidebar}}
        </div>
        <div id="content">
                <div class="flex-row topnav">{{> nav/navbar}}</div>
                <div class="flex-row">{{{ body }}}</div>
                    <div id="hits"></div>
                    {{> footer/footer}}
        </div>
        {{else}}
        <div class="col-lg-12 " id="main">
            <div class="flex-row">{{> nav/navbar-home}}</div>
            <div class="flex-row">{{{ body }}}</div>
        </div>
        {{/if}}
    </div>
</body>
<script type="text/javascript">
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
        });
    });
</script>

</html>