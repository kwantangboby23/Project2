<link rel="stylesheet" href="../css/home.css" media="screen" title="no title">
<div id="home">
  {{nav/navbar-home}}

  <div class="container">
    <div class="row forms">
      <div class="col-lg-5 col-sm-12 logbox">
        <div class="card d-flex align-self-center">
          <article class="card-body">
            <a href="/signup" class="float-right btn btn-outline-primary">Sign up</a>
            <h4 class="card-title mb-4 mt-1">Sign in</h4>
            <form class="login">
              <div class="form-group">
                <label>Your email</label>
                <input type="email" class="form-control" id="email-input" placeholder="Email">
              </div>
              <!-- form-group// -->
              <div class="form-group">
                <a class="float-right" href="#">Forgot?</a>
                <label>Your password</label>
                <input class="form-control" id="password-input" placeholder="******" type="password">
                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                  <span class="sr-only">Error:</span>
                  <span class="msg"></span>
                </div>
                <div class="checkbox">
                  <label>
                    <input type="checkbox"> I agree to the
                    <a href="#">terms of service</a> </label>
                </div>
                <!-- checkbox .// -->
              </div>
              <!-- form-group// -->
              <!-- form-group// -->
              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block log-submit"> Login </button>
              </div>
              <!-- form-group// -->
            </form>
          </article>
        </div>
        <!-- card.// -->
      </div>
      <div class="col-lg-7 col-sm-12 herocontent"><h2>Pretty marketing copy will go in here</h2><p>Blah blah blah</p></div>
    </div>
  </div>
</div>

<script type="text/javascript" src="js/login.js"></script>